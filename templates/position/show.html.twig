{% extends 'base.html.twig' %}

{% block title %}{{ 'Show position' |trans }}{% endblock %}

{% block body %}
{% include 'menu.html.twig' %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ 'Edit position' |trans }}</h1>
    {{ 'Name' |trans}} : {{ position.name |e }}<br />
    {{ 'Description' |trans}} : {{ position.description |e }}<br />
    <br />
    <button type="submit" class="btn btn-primary">{{ "Update Position" |trans}}</button>
    <button type="button" class="btn btn-warning">{{ "Cancel" |trans}}</button>
    <button type="button" class="btn btn-danger">{{ "Delete Position" |trans}}</button>
</div>
{% endblock %}
